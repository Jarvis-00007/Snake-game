import pygame
class Player:
    def __init__(self,x,y,w,h):
        self.rect=pygame.Rect(x,y,w,h)
        img=pygame.image.load("reddot.png")
        self.texture=pygame.transform.scale(img,(w,h))

    def draw(self,window):
        window.blit(self.texture,(self.rect.x,self.rect.y))

    def play(self):
        pass

    def update(self):
        pass

    def render(self):
        pass
